<head>
    <link rel="stylesheet" href="~/css/myStyle.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>



<form id="formOne" method="get" asp-action="searchByName" asp-controller="joinMvc">
    <input type="search" name="search" placeholder="Search..." value=" @ViewData["getCourse"]">
    <button  type="submit">Search</button>
</form>
   

<form id="formTwo" method="get" asp-action="filterByName" asp-controller="joinMvc">
    <select id="select" name="name">
        <option value="" disabled selected> ALL.. </option>
        @foreach (var item in @ViewBag.AllInstuate)
        {
            <option value="@item.InstituteName">
                @item.InstituteName
            </option>
        }
    </select>
    <button  type="submit" value="filter"> </button>
</form>




<div class="card-group mt-lg-5">
    @foreach (var item in Model)
     {
        <div class="col-lg-3 mb-4 ">
            <div class="card">
                <img src="@item.CoursePhotoUrl"class="card-img-top"  height="160" width="240" />
                <img src="@item.Institute.InstitutephotoUrl" height="70" width="70" />
                <div class="card-body ">
                    <h4 class="card-title">@Html.DisplayFor(model => item.CourseName)</h4>
                    <p class="col-sm-10">
                        @Html.DisplayFor(model => item.Institute.InstituteName)
                    </p>
                    <p class="col-sm-10 ">
                        @Html.DisplayFor(model => item.Level) |
                        @Html.DisplayFor(model => item.Rate)
                    </p>

                </div>
            </div>
        </div>
     }
</div>



